snippet if
	if [[ ${1:condition} ]]; then
		${0}
	fi

snippet else
	else
		${0:command}

snippet for_in
	for ${1:VAR} in ${0:LIST}
	do
		echo "\$${1:VAR}"
	done

snippet for_i
	for ((${1:i} = 0; ${1:i} < ${0:10}; ${1:i}++)); do
		echo "\$${1:i}"
	done

snippet while
	while [[ ${1:condition} ]]; do
		${0}
	done

snippet until
	until [[ ${1:condition} ]]; do
		${0}
	done

snippet case
	case "\$${1:VAR}" in
		${2:1})
			;;
		*) echo
			;;
	esac

